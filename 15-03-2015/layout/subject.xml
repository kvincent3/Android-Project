<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/blacklon" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_above="@+id/linearLayout1"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="120dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/histoire"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="60dp"
                android:background="@drawable/round_button"
                android:text="History"
                android:textColor="@color/WhiteSmoke" />

            <Button
                android:id="@+id/guerre"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignBaseline="@+id/histoire"
                android:layout_alignBottom="@+id/histoire"
                android:layout_alignParentRight="true"
                android:layout_marginRight="43dp"
                android:background="@drawable/round_button"
                android:text="War"
                android:textColor="@color/WhiteSmoke" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="fill_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="104dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/musique"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="57dp"
                android:background="@drawable/round_button"
                android:text="Music"
                android:textColor="@color/WhiteSmoke" />

            <Button
                android:id="@+id/monument"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="40dp"
                android:background="@drawable/round_button"
                android:text="Monument"
                android:textSize="12dp"
                android:textColor="@color/WhiteSmoke" />

        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>